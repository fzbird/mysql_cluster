# ========================================================================
# MySQL 从服务器配置文件 (v8.0 优化版)
# ========================================================================

[mysqld]
# ========================================================================
# 服务器标识
server-id = 2

# ========================================================================
# 二进制日志配置 (从服务器也建议开启，用于级联复制或灾备)
log-bin = mysql-bin
binlog-format = ROW
expire-logs-days = 7
max-binlog-size = 100M

# ========================================================================
# GTID 配置 (必须与主服务器一致)
gtid-mode = ON
enforce-gtid-consistency = ON

# ========================================================================
# 中继日志配置
relay-log = mysql-relay-bin
relay-log-index = mysql-relay-bin.index
log-replica-updates = 1

# ========================================================================
# 只读配置
read-only = 1
super-read-only = 1

# ========================================================================
# 复制配置
skip-replica-start = 1
replica-parallel-type = LOGICAL_CLOCK
replica-parallel-workers = 4
replica-preserve-commit-order = 1
replica-pending-jobs-size-max = 128M

# ========================================================================
# 连接配置
max-connections = 200
max-connect-errors = 1000
connect-timeout = 10
wait-timeout = 28800
interactive-timeout = 28800
skip-name-resolve

# ========================================================================
# 内存配置 (本地开发优化)
innodb-buffer-pool-size = 128M
innodb-buffer-pool-instances = 1
innodb-log-file-size = 32M
innodb-log-buffer-size = 8M
table-open-cache = 512
sort-buffer-size = 1M
read-buffer-size = 1M

# ========================================================================
# 慢查询日志
slow-query-log = 1
slow-query-log-file = /var/log/mysql/mysql-slow.log
long-query-time = 2

# ========================================================================
# 错误日志
log-error = /var/log/mysql/mysql-error.log

# ========================================================================
# 字符集配置
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# ========================================================================
# 时区配置
default-time-zone = '+08:00'

# ========================================================================
# InnoDB 配置
innodb-file-per-table = 1
innodb-flush-method = O_DIRECT
innodb-lock-wait-timeout = 50

# ========================================================================
# 安全配置
sql-mode = "STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"

# ========================================================================
# 临时文件配置
tmp-table-size = 32M
max-heap-table-size = 32M

# ========================================================================
# 从服务器特定配置
replica-net-timeout = 60
replica-load-tmpdir = /tmp

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4 